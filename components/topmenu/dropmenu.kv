<FileTopMenu>:
    auto_width: False
    width: '260dp'
    MenuButton:
        MenuLabel:
            text: 'Open File'
        MenuLabel:
            text: 'Ctrl+O'
            type: 'shortcut'
    MenuButton:
        MenuLabel:
            text: 'Open Folder'
        MenuLabel:
            text: '[Ctrl+K Ctrl+O]'
            type: 'shortcut'
    MenuButton:
        MenuLabel:
            text: 'Save'
        MenuLabel:
            text: 'Ctrl+S'
            type: 'shortcut'
    MenuButton:
        MenuLabel:
            text: 'Save as'
        MenuLabel:
            text: 'Ctrl+Shift+S'
            type: 'shortcut'
    MenuButton:
        MenuLabel:
            text: 'Save All'
    MenuButton:
        MenuLabel:
            text: 'Exit'
        MenuLabel:
            text: 'Ctrl+Q'
            type: 'shortcut'


<MenuLabel@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    padding: '20dp', 0
    type: 'text'
    color: (self.parent.text_colors[0] if self.type=='text' else self.parent.text_colors[1]) if self.parent else (0,0,0,1)


<MenuButton>:
    size_hint_y: None
    height: '30dp'
    canvas_color: 1,1,1,1
    text_colors: ((0,0,0,1), (.5,.5,.5,1))
    on_hover:
        if self.hover: self.canvas_color = .2,.5,1,1; self.text_colors=((1,1,1,1),(1,1,1,1))
        else: self.canvas_color = 1,1,1,1; self.text_colors=((0,0,0,1), (.5,.5,.5,1))
    canvas.before:
        Color:
            rgba: self.canvas_color
        Rectangle:
            size: self.size
            pos: self.pos