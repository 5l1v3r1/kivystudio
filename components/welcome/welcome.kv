<WelcomeTab>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # size_hint_y: None
            # height: '240dp'
            BoxLayout:
                size_hint_x: None
                width: '200dp'
                orientation: 'vertical'
                # Image:
                #     source: 'resources/images/kivy-icon-256.png'
                Label:
                    text: 'Kivy Studio' 
                    bold: True
                    font_size: '20dp'
            GridLayout:
                cols: 3
                IconLabel:
                    text: '%s'%(icon('fa-android'))
                    color: .2,1,.2
                    font_size: '64dp'
                IconLabel:
                    text: '%s'%(icon('fa-apple'))
                    color: .9,.9,.95
                    font_size: '64dp'
                IconLabel:
                    text: '%s'%(icon('fa-linux'))
                    font_size: '64dp'
                IconLabel:
                    text: '%s'%(icon('fa-windows'))
                    font_size: '64dp'
        BoxLayout:
            GridLayout:
                cols: 1
                Label:
                    size_hint_y: None
                    height: '32dp'
                    text: 'Start'
                    bold: True
                    font_size: '18dp'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    Label:
                        text: '[color=2255FF]Open file[/color] - [ctrl O]'
                        markup: True
                        size_hint_y: None
                        height: '32dp'
                    Label:
                        text: '[color=2255FF]Open folder[/color] - [ctrl K+O]'
                        markup: True
                        size_hint_y: None
                        height: '32dp'
            GridLayout:
                cols: 1
                Label:
                    size_hint_y: None
                    height: '32dp'
                    text: 'Recent'
                    bold: True
                    font_size: '18dp'
                BoxLayout:
                    orientation: 'vertical'
