#: import icon kivystudio.tools.iconfonts.icon

<WelcomeTab>:
    BoxLayout:
        BoxLayout:
            size_hint_x: None
            width: '200dp'
            orientation: 'vertical'
            Image:
                source: 'resources/images/kivy-icon-256'
            Label:
                text: 'Kivy Studio' 
                bold: True
                font_size: '20dp'
        GridLayout:
            cols: 3
            IconLabel:
                text: '%s'%(icon('fa-android'))
                color: .2,1,.2
                font_size: '32dp'
            IconLabel:
                text: '%s'%(icon('fa-apple'))
                color: .9,.9,.95
                font_size: '32dp'
            IconLabel:
                text: '%s'%(icon('fa-linux'))
                font_size: '32dp'
            IconLabel:
                text: '%s'%(icon('fa-windows'))
                font_size: '32dp'
            IconLabel:
                text: '%s'%(icon('fa-bug'))
            IconLabel:
                text: '%s'%(icon('fa-code-fork'))
